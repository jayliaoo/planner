FROM --platform=linux/amd64 lukemathwalker/cargo-chef:latest-rust-alpine AS chef
WORKDIR /app

FROM --platform=linux/amd64 chef AS planner
COPY . .
RUN cargo chef prepare --recipe-path recipe.json

FROM --platform=linux/amd64 chef AS builder
COPY --from=planner /app/recipe.json recipe.json
RUN cargo chef cook --release --recipe-path recipe.json
COPY . .
RUN apk --update add libpq-dev libc6-compat
RUN cargo build --release

FROM --platform=linux/amd64 alpine AS runtime
RUN apk --update add libpq-dev libc6-compat
WORKDIR /app
COPY --from=builder /app/target/release/planner-be /usr/local/bin
EXPOSE 3500
ENTRYPOINT ["/usr/local/bin/planner-be"]
